# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================
# Este archivo DEBE ser copiado como .env en producción
# cp .env.production .env

# API Configuration
VITE_API_URL=https://api.smartkubik.com/api/v1

# ========================================
# FEATURE FLAGS - PRODUCTION
# ========================================
# Multi-Tenant Login - DEBE estar en true para producción
VITE_ENABLE_MULTI_TENANT_LOGIN=true

# Fase 1: Fixes Críticos
VITE_ENABLE_EMPLOYEE_PERFORMANCE=false

# Fase 2: Cuentas Bancarias
VITE_ENABLE_BANK_MOVEMENTS=false
VITE_ENABLE_BANK_RECONCILIATION=false
VITE_ENABLE_BANK_TRANSFERS=false

# Fase 3: Dashboard y Reportes
VITE_ENABLE_DASHBOARD_CHARTS=false
VITE_ENABLE_ADVANCED_REPORTS=false

# Fase 4: Features Avanzadas
VITE_ENABLE_PREDICTIVE_ANALYTICS=false
VITE_ENABLE_CUSTOMER_SEGMENTATION=false
