# Database Configuration
MONGODB_URI=mongodb+srv://user:password@cluster.example.net/?retryWrites=true&w=majority&appName=Cluster0
MONGODB_TEST_URI=mongodb+srv://user:password@cluster.example.net/?retryWrites=true&w=majority&appName=Cluster0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
ENFORCE_TENANT_CONFIRMATION=false

# Venezuelan Tax Configuration
IVA_RATE=0.16
IGTF_RATE=0.03

# Currency Configuration
DEFAULT_CURRENCY=VES
USD_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/USD
RATE_UPDATE_INTERVAL=3600000

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Encryption Key for sensitive tenant data (API tokens, secrets)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# Logging Configuration
LOG_LEVEL=info
LOG_DIRECTORY=./logs

# CORS Configuration
CORS_ORIGIN=http://localhost:8080,http://localhost:3000,http://127.0.0.1:5174,http://localhost:5174,https://smartkubik.com
CORS_CREDENTIALS=true

# Swagger Configuration
SWAGGER_TITLE=Food Inventory SaaS API
SWAGGER_DESCRIPTION=API para sistema de inventario alimentario en Venezuela
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=api/docs

# SMTP Mailer Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-smtp-app-password
SMTP_FROM="Your Name <your-email@gmail.com>"

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# ========================================
# FEATURE FLAGS - FASE 0
# ========================================
# IMPORTANTE: En produccion todas deben estar en 'false' hasta validar
# Activar solo cuando la fase este completa y testeada

# Fase 1: Fixes Criticos
ENABLE_EMPLOYEE_PERFORMANCE=false

# Fase 2: Cuentas Bancarias
ENABLE_BANK_MOVEMENTS=false
ENABLE_BANK_RECONCILIATION=false
ENABLE_BANK_TRANSFERS=false

# Fase 3: Dashboard y Reportes
ENABLE_DASHBOARD_CHARTS=false
ENABLE_ADVANCED_REPORTS=false

# Fase 4: Features Avanzadas
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_CUSTOMER_SEGMENTATION=false

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# ========================================
# BINANCE PAY CONFIGURATION
# ========================================
# Obten tus credenciales en: https://merchant.binance.com/
# Documentacion: https://developers.binance.com/docs/binance-pay/introduction

# API Key de Binance Pay Merchant
BINANCE_PAY_API_KEY=your-binance-pay-api-key

# API Secret de Binance Pay Merchant
BINANCE_PAY_API_SECRET=your-binance-pay-api-secret

# Modo sandbox (true para testing, false para produccion)
BINANCE_PAY_SANDBOX=true

# URL base de la aplicacion (para callbacks y webhooks)
APP_BASE_URL=http://localhost:3000
